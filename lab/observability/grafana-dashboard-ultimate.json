{
  "dashboard": {
    "id": null,
    "title": "üöÄ Istio Multi-Cluster Ultimate Dashboard - Deployment Strategies",
    "tags": ["istio", "multi-cluster", "deployment-strategies", "service-mesh"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üéØ Deployment Strategies Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\"}[1m]))",
            "legendFormat": "Total RPS"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"v1\"}[1m]))",
            "legendFormat": "Blue (v1) RPS"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"v2\"}[1m]))",
            "legendFormat": "Green (v2) RPS"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"canary\"}[1m]))",
            "legendFormat": "Canary RPS"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps",
            "min": 0
          }
        }
      },
      {
        "id": 2,
        "title": "üîµ Blue/Green Traffic Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"v1\"}[1m]))",
            "legendFormat": "Blue (v1)"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"v2\"}[1m]))",
            "legendFormat": "Green (v2)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "hideFrom": {"legend": false, "tooltip": false, "vis": false}
            }
          }
        },
        "options": {
          "pieType": "pie",
          "tooltip": {"mode": "single"},
          "legend": {"displayMode": "table", "placement": "right"}
        }
      },
      {
        "id": 3,
        "title": "üéØ A/B Testing - User Segments",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 4},
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",request_header_x_user_type=\"premium\"}[1m]))",
            "legendFormat": "Premium Users"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",request_header_x_user_type=\"regular\"}[1m]))",
            "legendFormat": "Regular Users"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",request_header_x_user_type=\"beta\"}[1m]))",
            "legendFormat": "Beta Users"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-GrYlRd"},
            "unit": "reqps",
            "min": 0
          }
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 4,
        "title": "üöÄ Canary Rollout Progress",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 4},
        "targets": [
          {
            "expr": "(sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"canary\"}[1m])) / sum(rate(istio_requests_total{source_app=\"frontend-api\"}[1m]))) * 100",
            "legendFormat": "Canary %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 20},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 5,
        "title": "üìä Cross-Cluster Communication Latency",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(istio_request_duration_milliseconds_bucket{source_app=\"frontend-api\",destination_cluster=\"aks-istio-secondary\"}[1m])) by (le))",
            "legendFormat": "P50 Cross-Cluster"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(istio_request_duration_milliseconds_bucket{source_app=\"frontend-api\",destination_cluster=\"aks-istio-secondary\"}[1m])) by (le))",
            "legendFormat": "P95 Cross-Cluster"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(istio_request_duration_milliseconds_bucket{source_app=\"frontend-api\",destination_cluster=\"aks-istio-secondary\"}[1m])) by (le))",
            "legendFormat": "P99 Cross-Cluster"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(istio_request_duration_milliseconds_bucket{source_app=\"frontend-api\",destination_cluster=\"aks-istio-primary\"}[1m])) by (le))",
            "legendFormat": "P50 Local"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(istio_request_duration_milliseconds_bucket{source_app=\"frontend-api\",destination_cluster=\"aks-istio-primary\"}[1m])) by (le))",
            "legendFormat": "P95 Local"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "ms",
            "min": 0
          }
        },
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "table", "placement": "bottom"}
        }
      },
      {
        "id": 6,
        "title": "‚ö° Success Rate by Strategy",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "(sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"v1\",response_code!~\"5.*\"}[1m])) / sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"v1\"}[1m]))) * 100",
            "legendFormat": "Blue (v1) Success Rate"
          },
          {
            "expr": "(sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"v2\",response_code!~\"5.*\"}[1m])) / sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"v2\"}[1m]))) * 100",
            "legendFormat": "Green (v2) Success Rate"
          },
          {
            "expr": "(sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"canary\",response_code!~\"5.*\"}[1m])) / sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"canary\"}[1m]))) * 100",
            "legendFormat": "Canary Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "üåê Geographic Traffic Distribution",
        "type": "worldmap",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "sum by (request_header_x_user_location) (rate(istio_requests_total{source_app=\"frontend-api\"}[1m]))",
            "legendFormat": "{{request_header_x_user_location}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-BlYlRd"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 8,
        "title": "üì± Device-Based Routing",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",request_header_x_device_type=\"mobile\"}[1m]))",
            "legendFormat": "Mobile"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",request_header_x_device_type=\"desktop\"}[1m]))",
            "legendFormat": "Desktop"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",request_header_x_device_type=\"tablet\"}[1m]))",
            "legendFormat": "Tablet"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "continuous-GrYlRd"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 9,
        "title": "üîÑ Circuit Breaker Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 8, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "sum(envoy_cluster_upstream_cx_connect_fail{cluster_name=~\".*payment.*\"})",
            "legendFormat": "Connection Failures"
          },
          {
            "expr": "sum(envoy_cluster_upstream_rq_timeout{cluster_name=~\".*payment.*\"})",
            "legendFormat": "Timeouts"
          },
          {
            "expr": "sum(envoy_cluster_upstream_rq_retry{cluster_name=~\".*payment.*\"})",
            "legendFormat": "Retries"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "üé≠ Shadow Traffic Analysis",
        "type": "timeseries",
        "gridPos": {"h": 4, "w": 8, "x": 8, "y": 28},
        "targets": [
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version=\"shadow\"}[1m]))",
            "legendFormat": "Shadow Traffic"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",destination_version!=\"shadow\"}[1m]))",
            "legendFormat": "Production Traffic"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        }
      },
      {
        "id": 11,
        "title": "üìà Pod Autoscaling Status",
        "type": "timeseries",
        "gridPos": {"h": 4, "w": 8, "x": 16, "y": 28},
        "targets": [
          {
            "expr": "kube_deployment_status_replicas{deployment=\"frontend-api\"}",
            "legendFormat": "Frontend Replicas"
          },
          {
            "expr": "kube_deployment_status_replicas{deployment=\"payment-api\"}",
            "legendFormat": "Payment Replicas"
          },
          {
            "expr": "kube_hpa_status_current_replicas{hpa=\"frontend-api-hpa\"}",
            "legendFormat": "Frontend HPA Current"
          },
          {
            "expr": "kube_hpa_spec_target_metric{hpa=\"frontend-api-hpa\"}",
            "legendFormat": "Frontend HPA Target"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "short",
            "min": 0
          }
        }
      },
      {
        "id": 12,
        "title": "üîç Real-Time Strategy Switching",
        "type": "logs",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "targets": [
          {
            "expr": "{namespace=\"ecommerce-unified\"} |= \"strategy\" |= \"version\"",
            "legendFormat": "Strategy Logs"
          },
          {
            "expr": "{namespace=\"cross-cluster-demo\"} |= \"CLUSTER\" |= \"API\"",
            "legendFormat": "Cross-Cluster Logs"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true
        }
      },
      {
        "id": 13,
        "title": "üéØ SLO Compliance Dashboard",
        "type": "table",
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 40},
        "targets": [
          {
            "expr": "(sum(rate(istio_requests_total{source_app=\"frontend-api\",response_code!~\"5.*\"}[1m])) / sum(rate(istio_requests_total{source_app=\"frontend-api\"}[1m]))) * 100",
            "legendFormat": "Availability %"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(istio_request_duration_milliseconds_bucket{source_app=\"frontend-api\"}[1m])) by (le))",
            "legendFormat": "P95 Latency (ms)"
          },
          {
            "expr": "sum(rate(istio_requests_total{source_app=\"frontend-api\",response_code=~\"5.*\"}[1m])) / sum(rate(istio_requests_total{source_app=\"frontend-api\"}[1m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "Value": "Current Value",
                "__name__": "SLO Metric"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "cluster",
          "type": "query",
          "query": "label_values(istio_requests_total, source_cluster)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "namespace",
          "type": "query", 
          "query": "label_values(istio_requests_total, source_namespace)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "strategy",
          "type": "custom",
          "options": [
            {"text": "All", "value": "$__all"},
            {"text": "Blue/Green", "value": "bluegreen"},
            {"text": "Canary", "value": "canary"},
            {"text": "A/B Testing", "value": "ab"},
            {"text": "Shadow", "value": "shadow"}
          ],
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(kube_deployment_status_observed_generation{deployment=~\".*api.*\"}[1m]) > 0",
          "titleFormat": "Deployment: {{deployment}}",
          "textFormat": "New deployment detected",
          "iconColor": "green"
        },
        {
          "name": "Strategy Changes",
          "datasource": "Loki",
          "expr": "{namespace=~\".*\"} |= \"strategy\" |= \"changed\"",
          "titleFormat": "Strategy Change",
          "textFormat": "Deployment strategy modified",
          "iconColor": "blue"
        }
      ]
    }
  }
}
